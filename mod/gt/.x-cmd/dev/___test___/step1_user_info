# shellcheck shell=sh disable=

###
 # @Description: user info TEST
###
test:debug "Token: ${TEST_USER_TOKEN} User: ${TEST_USER_NAME}"

# Section: ___x_cmd_gt_user_info
test_user_info(){
    printf "%s" "$TEST_USER_NAME"   | @assert stdout "gt user info              | x jq -r .login"
    printf "%s" "oschina-org"       | @assert stdout "gt user info oschina-org  | x jq -r .login"
}

# Section: ___x_cmd_gt_user_email
test_user_email(){
    test:debug "$(gt user email)"
    printf "%s" "$TEST_USER_EMAIL"  | @assert stdout "gt user email             | x jq -r \".[0].email\""
}

@assert:file:func
