# shellcheck shell=sh false=SC2039,SC2142,SC3043

param_flag2bool() {
    param:dsl       '
option:
    --flag_1        "test flag_1"
    --flag_2        "test flag_2"
'
    param:run

    local has_flag="true"
    param:flag2bool flag_1 flag_2 flag_3=^^has_flag flag_4=^^has_not_flag flag_5=^has_flag flag_6=^has_not_flag
    printf "%s\n" "flag_1: $flag_1"
    printf "%s\n" "flag_2: $flag_2"
    printf "%s\n" "flag_3: $flag_3"
    printf "%s\n" "flag_4: $flag_4"
    printf "%s\n" "flag_5: $flag_5"
    printf "%s\n" "flag_6: $flag_6"
}

test_param_flag2bool(){
    @assert stdout param_flag2bool --flag_1 <<A
flag_1: true
flag_2: false
flag_3: true
flag_4: false
flag_5: false
flag_6: true
A
}
@assert:file:func
