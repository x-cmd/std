# shellcheck shell=sh disable=SC2039,SC2142,SC3043

special_option_id(){
    param:dsl '
options:
    PARAM_STATUS|--status    "desc status"      <status>="111"
    PARAM_PATH|--path        "desc path"        <path>="222"
'
    param:run
}

test_param_special_option_id_advise_json(){
  local INDENT=4
    @assert stdout "X_CMD_ADVISE_FUNC_NAME=special_option_id; special_option_id _x_cmd_advise_json | x jo fmt"<<A
{
    "#desc": "",
    "--status": {
        "#desc": "desc status",
        "#1": {
            "#desc": ""
        }
    },
    "--path": {
        "#desc": "desc path",
        "#1": {
            "#desc": ""
        }
    }
}
A
}

@assert:file:func