# NOTICE: This is just for EDUCATION purpose and demonstration how to setting the User-Agent in this library. Don't use it for evil.
http.header.agent.eq.chrome(){ http.header.agent.eq 'Mozilla/5.0 (Windows NT 6.2; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/32.0.1667.0 Safari/537.36'; }
http.header.agent.eq.ie9(){ http.header.agent.eq "Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; WOW64; Trident/5.0)"; }
http.header.agent.eq.weixin(){ http.header.agent.eq 'Mozilla/5.0 (iPhone; CPU iPhone OS 8_0 like Mac OS X) AppleWebKit/600.1.4 (KHTML, like Gecko) Mobile/12A365 MicroMessenger/6.0 NetType/WIFI'; }
http.header.agent.eq.firefox+win7(){ http.header.agent.eq "Mozilla/5.0 (Windows NT 6.1; WOW64; rv:12.0) Gecko/20100101 Firefox/12.0"; }
http.header.agent.eq.googlebot(){ http.header.agent.eq "Googlebot/2.1 (+http://www.google.com/bot.html)"; }
http.header.agent.eq.baiduspider(){ http.header.agent.eq "Mozilla/5.0 (compatible; Baiduspider/2.0; +http://www.baidu.com/search/spider.html)"; }
