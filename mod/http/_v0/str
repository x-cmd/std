dict_make(){
    local O="${1:?Please provide object name}"
    eval "$O=0"
}

# O=b dload "$( a.dump | dgrep "abc" | dgerp "abc" )"

dict_dump(){
    local O="${O:?Please provide object name}"
    eval printf "%s" "\"\$${O}\""
}

dict_load(){
    local O="${O:?Please provide object name}"
    local s
    s="$(cat)"
    eval "$O"='"$s"'
}

dict_size(){
    local O="${O:?Please provide object name}"
    local data
    data="$(eval printf "%s" "\"\$${O}\"")"

    local len
    len="${data##*${DICT_SEP}}"

    printf "%s" "${len:-0}"
}

dict_get(){
    : "${O:?Please provide object name}"
    eval printf "%s" "\"\$${O}\"" | dict_pget "$@"
}

dict_put(){
    : "${O:?Please provide object name}"
    local s
    s="$(eval printf "%s" "\"\$${O}\"" | dict_pput "$@")"

    eval "$O=\"\$s\""
}

dict_scope(){
    : "${O:?Please provide object name}"
    eval printf "%s" "\"\$${O}\"" | dict_pscope "$@"
}

dict_drop(){
    : "${O:?Please provide object name}"
    local O="${O:?list_name}"
    local s
    if s="$(eval printf "%s" "\"\$${O}\"" | dict_pdrop "$@")"; then
        eval "$O=\"\$s\""
    else
        return 1
    fi    
}

dict_dropr(){
    : "${O:?Please provide object name}"
    local O="${O:?list_name}"
    local s
    if s="$(eval printf "%s" "\"\$${O}\"" | dict_pdropr "$@")"; then
        eval "$O=\"\$s\""
    else
        return 1
    fi
}


dict_grep(){
    : "${O:?Please provide object name}"
    local O="${O:?list_name}"
    local s
    if s="$(eval printf "%s" "\"\$${O}\"" | dict_pgrep "$@" -)"; then
        eval "$O=\"\$s\""
    else
        return 1
    fi    
}

dict_grepr(){
    : "${O:?Please provide object name}"
    local O="${O:?list_name}"
    local s
    if s="$(eval printf "%s" "\"\$${O}\"" | dict_pgrepr "$@" -)"; then
        eval "$O=\"\$s\""
    else
        return 1
    fi
}

dict_iter(){
    local O="${O:?Please provide object name}"
    local data
    data="$(eval printf "%s" "\"\$${O}\"")"

    local fun="$*" # "$1 \"\$key\" \"\$val\""
    if [ "$#" -eq 1 ] && command -v "$1"; then
        fun="$1 \"\$key\" \"\$val\""
    fi

    local key
    local val 

    while :; do
        key="${data%%${DICT_SEP}*}"
        data="${data#*${DICT_SEP}}"
        val="${data%%${DICT_SEP}*}"
        data="${data#*${DICT_SEP}}"

        eval "$fun"
    done
}

