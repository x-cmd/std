# shellcheck shell=sh

special_option(){
    param:dsl '
options:
    PARAM_STATUS|--status    "desc status"      <status>="111"
    PARAM_PATH|--path        "desc path"        <path>="222"
'
    param:run
}

test_special_option_help(){
    @assert stdout special_option -h <<A

OPTIONS:
    --status <status>   desc status [default: 111]
    --path <path>       desc path [default: 222]

A
}

@assert:file:func