# shellcheck shell=sh

ls_subcmd(){
    param:subcmd ls_subcmd            \
        aaa       "This is a aaa"          \
        bbb       "This is a bbb"
    param:subcmd:try

    param:dsl <<A
subcommand:
    ccc                     "This is a ccc"
    ddd                     "This is a ddd"
A
    param:run
}

test_ls_subcmd(){
    @assert stdout ls_subcmd _ls_subcmd <<A
aaa
This is a aaa
bbb
This is a bbb
ccc
This is a ccc
ddd
This is a ddd
A

    @assert stdout ls_subcmd _param_list_subcmd <<A
aaa
bbb
ccc
ddd
A
}

@assert:file:func