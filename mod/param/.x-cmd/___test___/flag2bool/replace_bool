# shellcheck shell=sh disable=SC2039,SC2142,SC3043

replace_bool() {
    param:dsl       '
option:
    --flag_1        "test flag_1"
    --flag_2        "test flag_2"
'
    param:run

    true=enable false=disable param:flag2bool flag_1 flag_2
    printf "%s\n" "flag_1: $flag_1"
    printf "%s\n" "flag_2: $flag_2"
}

test_replace_bool(){
    @assert stdout replace_bool --flag_1 <<A
flag_1: enable
flag_2: disable
A
}
@assert:file:func
