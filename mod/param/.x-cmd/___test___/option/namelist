# shellcheck shell=sh disable=SC2039,SC2142,SC3043

namelist(){
    param:scope     "paramtest/$O"
    param:dsl       '
advise:
    #1    list_repo
option:
    #1|--mul_line_arg|-m    "Test multiple line argument"                <mline_arg>:mline_arg_type
    #3|--regex_arg2         "Test an argument with regex 2"              <>=20    =~  ([1-9]?[0-9]|100)
    #2|--regex_arg1         "Test an argument with regex 1"              <>=0     =~  [0-9]*
'
    param:run
    printf "%s\n" "regex_arg1: $regex_arg1"
    printf "%s\n" "regex_arg2: $regex_arg2"
    printf "%s\n" "multiple line argument: $mul_line_arg"
}

test_namelist(){
    @assert stdout "O=xxxx; namelist --regex_arg1 0 -m \"$mul_line_arg\" "<<A
regex_arg1: 0
regex_arg2: 20
multiple line argument: aaa
bbb
ccc
A
}
@assert:file:func