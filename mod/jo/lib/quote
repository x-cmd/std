# Using awk for it if posix
___x_cmd_jo___quote(){
    ___="${___//$'\\'/\\}"
    ___="${___//$'\n'/\\n}"
    ___="${___//$'\r'/\\n}"
    ___="${___//$'\t'/\\t}"
    ___="${___//$'\b'/\\b}"
    ___="${___//\"/\\\"}"
    ___="\"$___\""
}

___x_cmd_jo___unquote(){
    ___="${___//$'\\'/\\}"
    ___="${___//$'\n'/\\n}"
    ___="${___//$'\r'/\\n}"
    ___="${___//$'\t'/\\t}"
    ___="${___//$'\b'/\\b}"
    ___="${___//\"/\\\"}"
    ___="\"$___\""
}
