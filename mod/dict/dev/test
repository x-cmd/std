c='{
  "1": "a",
  "2": "b",
  "2 \" 3 ": "b",
  "3": "c"
}'

___dict_pjsonparse(){
    awk -v op=flat-leaf -f "$(xrc which json/lib/v0_walk.awk)" \
        | awk 'BEGIN{ORS="\003"} { start=index($0, "\"")
          tmp=index($0, "--->")
          print substr($0,start+1,tmp-start-3) "\003" substr($0,tmp+start+3,length($0)-tmp-6)
        } END{ print NR }'
}
# printf "%s" "$c" | ___dict_pjsonparse
printf "%s" "$c" | ___dict_pjsonparse
