# xrc ui
f(){
        {
            while true; do
                printf "VIEW %s %s\n" "$(ui cols)" "$(ui rows)"
                sleep 0.2 || break
            done
        } &

        while ___x_cmd_ui_getchar; do
            printf "CHAR %s %s\n" "$___X_CMD_UI_GETCHAR_TYPE" "$___X_CMD_UI_GETCHAR_CHAR"
            if [ "$___X_CMD_UI_GETCHAR_CHAR" = "ENTER" ];then
                break
            fi
        done
        kill $!
}
f