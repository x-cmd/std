# shellcheck shell=sh disable=SC3043

___X_BASH_UI_MARKDOWN_AWK="$(xrc which ui/lib/markdown.awk)"
# ___X_BASH_UI_MARKDOWN_AWK="./markdown.awk"

# TO_HTML?
___ui_markdown(){

    ui_init_lines_columns
    if [ $# -ne 0 ]; then
        cat "$@"
    else
        cat
    fi | awk -v COLUMNS="$COLUMNS" "$(xrc cat awk/lib/wcwidth.awk)$(cat "$___X_BASH_UI_MARKDOWN_AWK")"
}
