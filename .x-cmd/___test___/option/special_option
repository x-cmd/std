# shellcheck shell=sh disable=SC2039,SC2142,SC3043

special_option(){
    param:dsl '
options:
    PARAM_STATUS|--status    "desc status"      <status>="111"
    PARAM_PATH|--path        "desc path"        <path>="222"
'
    param:run
    printf "%s\n" "status: $PARAM_STATUS"
    printf "%s\n" "path: $PARAM_PATH"
}

test_param_special_option(){
    @assert stdout special_option --status aaa --path bbb <<A
status: aaa
path: bbb
A
}
@assert:file:func