#! /usr/bin/env bash

add(){
    local name="${1:?Provide module name}"
    # local position="${2:-"git@gitee.com/x-bash/$name.git"}"
    local position="${2:-"https://gitee.com/x-bash/$name.git"}"
    local branch="${3:-master}"
    git subtree add --prefix="lib/$name" "$position" "$branch" --squash
}

pull(){
    local name="${1:?Provide module name}"
    # local position="${2:-"git@gitee.com/x-bash/$name.git"}"
    local position="${2:-"https://gitee.com/x-bash/$name.git"}"
    local branch="${3:-master}"
    git subtree pull --prefix="lib/$name" "$position" "$branch" --squash
}

ls(){

    # TODO: add modules: xrc xcmd adviser
    local mod_list="
# basic modules: non dependency
str
list
assert
dict

# basic modules: dependencies
param
http
advise
ui

# modules
static-build
ccmd

# web clients
ali
gitee

"
    while read -r mod; do
        case "$mod" in
            *#*)    continue ;;
            "")     continue ;;
            *)      printf "%s\n" "$mod"
        esac
    done <<A
$(printf "%s" "$mod_list")
A

}

all(){
    local IFS
    local mod
    while read -r mod; do
        if [ -e "lib/$mod" ]; then
            pull "$mod"
        else
            add "$mod"
        fi
    done <<A
$(ls)
A
}

if [ "$#" -gt 0 ]; then
    op="$1"
    shift
    "$op" "$@"
fi
