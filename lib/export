# Section: export-all
___x_cmd_xrc_export_all(){

    if [ -z "${BASH_VERSION}${ZSH_VERSION}" ]; then
        # TODO: make sure it can works in bash
        export -f xrc
        export -f x
        export -f ___x_cmd_curl_gitx
        export -f ___x_cmd_http_get
        export -f ___x_cmd_logger
        export -f ___x_cmd_xrc_source_file_list_code
        export -f ___x_cmd_curl
    fi

    # Using command line.
    export X_CMD_SRC_SHELL
    export ___X_CMD_XRC_PATH
    export XRC_LOG_COLOR
    export XRC_LOG_TIMESTAMP
    export TMPDIR
}
