# shellcheck shell=sh disable=SC3043

___x_cmd_dev_pkg_gitx(){
    if [ -z "$___X_CMD_IN_CHINA_NET" ]; then
        printf "%s\n" "github.com"
    else
        printf "%s\n" "gitee.com"
    fi
}

# Section: module add pull update
___x_cmd_dev_pkg_add(){
    local name="${1:?Provide module name}"
    # local position="${2:-"git@gitee.com/x-bash/$name.git"}"
    local position="${2:-"https://$(___x_cmd_dev_pkg_gitx)/x-bash/$name.git"}"
    local branch="${3:-main}"
    git subtree add --prefix="mod/$name" "$position" "$branch" --squash
}

___x_cmd_dev_pkg_pull(){
    local name="${1:?Provide module name}"
    # local position="${2:-"git@gitee.com/x-bash/$name.git"}"
    local position="${2:-"https://$(___x_cmd_dev_pkg_gitx)/x-bash/$name.git"}"
    local branch="${3:-main}"
    git subtree pull --prefix="mod/$name" "$position" "$branch" --squash
}

___x_cmd_dev_pkg_update(){
    local IFS
    local mod
    git prune

    ___x_cmd_dev_pkg_lsmod "$@" | \
    while read -r mod; do
        if [ -e "mod/$mod" ]; then
            ___x_cmd_dev_pkg_pull "$mod"
        else
            ___x_cmd_dev_pkg_add "$mod"
        fi
    done
}

# EndSection

# Section: information

___x_cmd_dev_pkg_lsmod(){       ___x_cmd_dev_mod_ls "$@";   }

___x_cmd_dev_pkg_lsfile()(
    cd "$(x wsroot)/mod" || return

    ___x_cmd_dev_pkg_lsmod "$@" | (
        cd "$(x wsroot)/mod" && \
        while read -r line; do
            ( cd "$line" && ___x_cmd_dev_mod_lsfile | x arg1 printf "%s/%s\n" "$line" )
        done
    )
)

___x_cmd_dev_pkg_install()(
    cd "$(x wsroot)/mod" || return

    ___x_cmd_dev_pkg_lsmod "$@" | (
        cd "$(x wsroot)/mod" && \
        while read -r line; do
            ( cd "$line" && ___x_cmd_dev_mod_install )
        done
    )
)

___x_cmd_dev_pkg_wc(){
    cd "$(x wsroot)/mod" &&
        ___x_cmd_dev_pkg_lsfile "$@" | xargs wc | sort -n -r | less
}

# EndSection

# Section: tgz tar 7z

___x_cmd_dev_pkg_tgz()(
    case "${1:-all}" in
        core)       scope=core ;;
        all)        scope=all ;;
        *)          return 1 ;;
    esac

    WSROOT="$(x wsroot)"

    cd "$WSROOT/mod" &&
    mkdir -p "$WSROOT/dist" &&
        eval "tar czvf $scope.tgz $(___x_cmd_dev_pkg_lsfile "$scope" | tr '\n' ' ')" &&
        mv $scope.tgz "$WSROOT/dist/$scope.tgz" &&
        ls -alh "$WSROOT/dist/$scope.tgz"
)

___x_cmd_dev_pkg_tar()(
    case "${1:-all}" in
        core)       scope=core ;;
        all)        scope=all ;;
        *)          return 1 ;;
    esac

    WSROOT="$(x wsroot)"

    cd "$WSROOT/mod" &&
    mkdir -p "$WSROOT/dist" &&
        eval "tar cvf $scope.tar $(___x_cmd_dev_pkg_lsfile "$scope" | tr '\n' ' ')" &&
        mv $scope.tar "$WSROOT/dist/$scope.tar" &&
        ls -alh "$WSROOT/dist/$scope.tar"
)

___x_cmd_dev_pkg_7z()(
    case "${1:-all}" in
        core)       scope=core ;;
        all)        scope=all ;;
        *)          return 1 ;;
    esac

    WSROOT="$(x wsroot)"

    cd "$WSROOT/mod" &&
    mkdir -p "$WSROOT/dist" &&
        eval "7z a $WSROOT/dist/all.7z $(___x_cmd_dev_pkg_lsfile "$scope" | tr '\n' ' ')" &&
        mv $scope.7z "$WSROOT/dist/$scope.7z" &&
        ls -alh "$WSROOT/dist/$scope.7z"
)

# EndSection

___x_cmd_dev_pkg_pub(){
    ___x_cmd_dev_pkg_update "$@" && ___x_cmd_dev_pkg_tgz "$@" && git add . && git commit -m ...
    ___x_cmd_dev_ws_push
}

___x_cmd_dev_pkg(){

    if [ -f "$(x wsroot)/.x-cmd/$1" ]; then
        x _ws "$@"
        return
    fi

    param:dsl <<A
subcommand:
    install         "install all modules"

    update          "update or add module"
    pub             "publish the package"
    lsmod           "ls module"
    lsfile          ""
    wc              "count"

    tgz             "compress modules of core/all/<special-release> into <name>.tgz"
    tar             "compress modules"

    init            "init"

    pull            "pull"
    push            "push"
    name            "get workspace name from git config"
A
    param:run

    if [ -z "$PARAM_SUBCMD" ]; then
        ___x_cmd_dev_pkg help
        return 1
    fi

    if command -v "___x_cmd_dev_pkg_${PARAM_SUBCMD}" >/dev/null; then
        "___x_cmd_dev_pkg_${PARAM_SUBCMD}" "$@"
    else
        case "$PARAM_SUBCMD" in
            pull|push|name)
                "___x_cmd_dev_ws_$PARAM_SUBCMD" "$@"
                ;;
            init)
                "___x_cmd_dev_init" "$@"
        esac
    fi

}
