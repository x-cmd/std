# shellcheck shell=sh disable=SC3043
# Reference: https://www.jianshu.com/p/0deb70e6f395

proxy_npm(){
    param:dsl <<A
subcommand:
    url         "Provide url of mirror candidates"
    set         "Setting the mirror"
    get         "Get current mirror"
    unset       "Reset the source to the original official"
A
    param:run

    if ! command -v npm >/dev/null; then
        proxy_log error "command not found: npm, you should install npm in your system."
        return 1
    elif [ -n "$PARAM_SUBCMD" ]; then
        "proxy_npm_${PARAM_SUBCMD}" "$@"
    else
        proxy_log info "Current Registry is:    "
        proxy_npm get
        proxy_npm _param_help_doc  >&2
    fi

}

proxy_npm_url(){
    param:dsl <<A
subcommand:
    aliyun|ali              "Ali mirror"
    official                "Official mirror"
A
    param:run

    case "$PARAM_SUBCMD" in
        aliyun|ali)             printf https://registry.npm.taobao.org/             ;;
        official)               printf https://registry.npmjs.org/                  ;;
        *)                      proxy_npm_url _param_help_doc >&2                   ;;
    esac
}

proxy_npm_get(){
    param:void
    npm config get registry
}

proxy_npm_set() {
    param:dsl <<A
subcommand:
    aliyun|ali              "Ali mirror"
    official                "Official mirror"
A
    param:run

    local url
    url="$(proxy_npm_url "${PARAM_SUBCMD:-aliyun}")"
    printf "Setting proxy_npm mirror:\n    %s\n\n" "$url" >&2
    npm config set registry "$url"
}

proxy_npm_unset() {
    param:void
    proxy_npm_set   official
}

proxy_npm_tutorial(){
    param:void
    cat <<A
A
}